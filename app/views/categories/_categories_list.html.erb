<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category , class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning btn-sm"  %></td>
        <td><%= link_to 'Destroy', category, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
